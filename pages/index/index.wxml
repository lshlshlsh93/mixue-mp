<view class="page">
  <!-- 轮播图区域 -->
  <view wx:if="{{swiperList.length }}" class="swiper-container">
    <swiper bindchange="onSwierChange">
      <swiper-item wx:for="{{swiperList}}" wx:key="index">
        <image bindtap="onSwiperTap" data-item="{{item}}" mode="aspectFill" src="{{item.image_url}}"></image>
      </swiper-item>
    </swiper>
    <view class="dots">
      <view class="dot {{current !== index || 'active'}}"  wx:for="{{swiperList}}" wx:key="index">
      </view>
    </view>
  </view>

</view>