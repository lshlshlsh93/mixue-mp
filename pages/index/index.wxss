@charset "UTF-8";
/* pages/index/index.scss */
.swiper-container {
  width: 100vw;
  height: 630rpx;
  position: relative;
  /*swiper*/
}

.swiper-container swiper {
  height: 100%;
}

.swiper-container swiper image {
  width: 100%;
  height: 100%;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
}

.swiper-container .dots {
  position: absolute;
  left: 50rpx;
  bottom: 58rpx;
  display: inline-flex;
}

.swiper-container .dots .dot {
  width: 8rpx;
  height: 8rpx;
  background-color: #fff;
  opacity: 0.5;
  border-radius: 4rpx;
  margin-left: 4rpx;
  transition: all 0.5s;
}

.swiper-container .dots .dot.active {
  width: 29rpx;
  opacity: 1;
}

/* 会员 */
.member-area {
  z-index: 2;
  margin-top: -40rpx;
  overflow: hidden;
  width: 688rpx;
  height: 174rpx;
  border-radius: 16 rpx;
  box-shadow: -2px -3px 10px rgba(0, 0, 0, 0.2);
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 25rpx;
  box-sizing: border-box;
  /*vip-box*/
  /*coin-box*/
}

.member-area .vip-box {
  display: flex;
  /*meta*/
}

.member-area .vip-box image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin-right: 26rpx;
  flex-shrink: 0;
}

.member-area .vip-box .meta .title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 18rpx;
}

.member-area .vip-box .meta .tips {
