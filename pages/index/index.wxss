  font-size: 22rpx;
  margin-top: 14rpx;
}

.member-area .coin-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.member-area .coin-box image {
  width: 130rpx;
  height: 70rpx;
}

.member-area .coin-box .currency {
  margin-top: 10rpx;
  color: #d32d25;
}
