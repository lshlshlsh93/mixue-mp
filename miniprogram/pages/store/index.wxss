.header {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
}

.header .search {
  width: 174rpx;
  height: 58rpx;
  background-color: #f5f5f5;
  border-radius: 29rpx;
  padding: 0 26rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #d1d1d1;
}

.store-map {
  width: 100%;
  height: 520rpx;
  position: relative;
}

.store-map .current-icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 18rpx;
  bottom: 22rpx;
}

.collapse-area {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #777777;
}

.store-list {
  width: 100%;
  background-color: #f8f8f8;
  height: calc(100vh - 700rpx);
  box-sizing: border-box;
}

.store-list .store-box {
  background-color: #ffffff;
  padding: 25rpx;
  margin: 14rpx 25rpx;
  display: flex;
  align-items: center;
}

.store-list .store-box .info-area {
  border-right: 1rpx solid #eeeeee;
  flex: 1;
}

.store-list .store-box .info-area .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.store-list .store-box .info-area .address {
  font-size: 18rpx;
  color: #777777;
  margin-bottom: 12rpx;
}

.store-list .store-box .info-area .time {
  font-size: 18rpx;
  color: #777777;
  margin-bottom: 12rpx;
}

.store-list .store-box .info-area .tag {
  display: inline-block;
  font-size: 18rpx;
  color: #fff;
  background-color: #E60012;
  padding: 6rpx;
}

.store-list .store-box .location-area {
  margin-left: 25rpx;
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
}

.store-list .store-box .location-area .distance {
  margin-bottom: 35rpx;
  font-size: 20rpx;
  color: #777777;
}

.store-list .store-box .location-area .action-area {
  width: 112rpx;
  display: flex;
  justify-content: space-around;
}

.store-list .store-box .location-area .action-area image {
  width: 40rpx;
  height: 40rpx;
}
